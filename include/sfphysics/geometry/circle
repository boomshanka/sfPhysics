#ifndef SFPHYSICS_CIRCLE
#define SFPHYSICS_CIRCLE

#include <sfphysics/geometry/form>

#include <sfphysics/geometry/vector2>


namespace sfp
{
	
	class circle : public form
	{
		private:
			vector2f m_center;
			float m_radius;
			
		public:
			circle(const vector2f& center = vector2f(0, 0), float radius = 1.f);
			~circle();
			
			vector2f center() const;
			void center(const vector2f& center);
			
			float radius() const;
			void radius(float radius);
			
			float area() const;
			float inertia_moment() const;
	};
	
}


#endif // SFPHYSICS_CIRCLE


