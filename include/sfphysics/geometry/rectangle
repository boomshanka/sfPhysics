#ifndef SFPHYSICS_RECTANGLE
#define SFPHYSICS_RECTANGLE

#include <sfphysics/geometry/form>

#include <sfphysics/geometry/vector2>


namespace sfp
{
	
	class rectangle : public form
	{
		private:
			vector2f m_center;
			vector2f m_size;
			
		public:
			rectangle(const vector2f& center = vector2f(0,0), const vector2f& size = vector2f(1,1));
			~rectangle();
			
			vector2f center() const;
			void center(const vector2f& center);
			
			const vector2f& size() const;
			void size(const vector2f& size);
			
			float area() const;
			float inertia_moment() const;
			
	};
	
}


#endif // SFPHYSICS_RECTANGLE


