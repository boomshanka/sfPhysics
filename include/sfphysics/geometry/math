#ifndef SFPHYSICS_MATH
#define SFPHYSICS_MATH

#include <cmath>


namespace sfp
{

	template <typename T>
	class math
	{
		public:
			static T abs(T value);
			
			static T square(T value);
			static T sqrt(T value);
	};
	
	
	#include <sfphysics/geometry/math.inl>
	
	
	typedef math<float> mathf;
	typedef math<double> mathd;
	typedef math<long double> mathld;
	

} // namespace


#endif // SFPHYSICS_MATH


