#ifndef SFPHYSICS_BODYDRAW
#define SFPHYSICS_BODYDRAW

#include <memory>

#include <sfphysics/SFML_Graphics>
#include <sfphysics/draw/drawsettings>

#include <sfphysics/mechanic/body>


namespace sfp
{
	class bodydraw : public sf::Drawable
	{
		private:
			std::shared_ptr<body> m_body;
			std::shared_ptr<drawsettings> m_drawsettings;
			
			sf::Drawable* m_drawable;
			
			virtual void Draw(sf::RenderTarget& target, sf::RenderStates states) const;
			void create_shape();
			
		public:
			bodydraw(std::shared_ptr<body>, std::shared_ptr<drawsettings>);
			~bodydraw();
			
			
	};
}


#endif // SFPHYSICS_BODYDRAW


