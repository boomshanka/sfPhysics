#ifndef SFPHYSICS_SHAPE
#define SFPHYSICS_SHAPE

#include <sfphysics/geometry/form>

#include <list>
#include <memory>


namespace sfp
{

	class shape // Eher intern genutzt, Methoden teilweise nach body, auch eigenschaften wie velocity etc. Klasse ist nur zum Verwalten von Formen
	{
		private:
			std::list<std::shared_ptr<form> > m_forms;
			
			
		public:
			virtual ~shape();
			
			void add_form(std::shared_ptr<form> add);
			bool remove_form(std::shared_ptr<form> remove);
			void clear_forms();
			
			
	};

}


#endif // SFPHYSICS_SHAPE


