#ifndef SFPHYSICS_PROPERTIES
#define SFPHYSICS_PROPERTIES


//FIXME unsigned
namespace sfp
{

	class properties
	{
		private:
			float m_mass;				//Masse
			float m_density;			//Dichte
			float m_area;				//Fläche
			float m_inertia_moment;		//Trägheitsmoment (ohne Masse!)
			float m_restitution;		//Abprallkraft
			float m_dynamic_friction;	//Dynamische Reibung
			float m_static_friction;	//Statische Reibung
			
		public:
			properties();
			~properties();
			
			
			float mass() const;
			void mass(float mass);
			
			float density() const;
			void density(float dens);
			
			float area() const;
			void area(float area);
			
			float inertia_moment() const;
			void inertia_moment(float inertia);
			
			float restitution() const;
			void restitution(float res);
			
			float dynamic_friction() const;
			bool dynamic_friction(float dyn);
			
			float static_friction() const;
			bool static_friction(float stat);
			
			bool friction(float stat, float dyn);
	};
	
	
	#include <sfphysics/mechanic/properties.inl>

}


#endif // SFPHYSICS_PROPERTIES


